pkgname=java-options
pkgver=1
pkgrel=1
arch=(any)
license=(None)
depends=('java-runtime')

build() {
	cd "$srcdir"
	
	font='-Dwat.useSystemAAFontSettings=lcd'
	fontfolder='/usr/share/fonts/TTF'
	look='-Dswing.defaultlaf=com.sun.java.swing.plaf.gtk.GTKLookAndFeel'
	
	echo "export _JAVA_OPTIONS=\"$font $look\"" > $pkgname
	echo "export JAVA_FONTS=$fontfolder" >> $pkgname
}

package() {
	cd "$pkgdir"
	mkdir -p etc/profile.d
	install -Dm 755 "$srcdir"/$pkgname etc/profile.d/
}
